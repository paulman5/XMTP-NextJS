{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Build",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vitest", "vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
